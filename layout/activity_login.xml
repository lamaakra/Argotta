<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layoutDirection="ltr"
    tools:context="com.example.ahmad.chat_3.activities.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginImage"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />


        <EditText
            android:id="@+id/etUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/Username"
            android:padding="10dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:singleLine="true"
            android:textColor="#808080" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#808080"
            android:textAlignment="viewStart"
            android:layoutDirection="locale"/>


        <Button
            android:id="@+id/loginBT"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/start_bt"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            android:text="@string/Login"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forgotPassLink"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@null"

                android:gravity="center"
                android:text="@string/CantLogIn"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/registerLink"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dip"
                android:layout_marginTop="5dip"
                android:background="@null"
                android:gravity="center"
                android:text="@string/CreateAccount"
                android:textAllCaps="false"
                android:textColor="#35A8E0"
                android:textSize="15dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
