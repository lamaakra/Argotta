<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.ahmad.chat_3.activities.FullNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dip">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/countryImage"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="7dp"
                android:paddingLeft="3dp"
                android:text="@string/WhereDoYouLive"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCountry"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="150dip"
            android:background="@drawable/edittext_bg"
            android:hint="@string/Country"
            android:inputType="textPersonName"
            android:digits="@string/all_letters"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#808080" />

        <EditText
            android:id="@+id/etNB"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/MobileNumber"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#808080" />


        <Button
            android:id="@+id/nextBT3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:layout_marginVertical="10dip"
            android:background="@drawable/start_bt"
            android:baselineAligned="false"
            android:text="@string/Next"

            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>